<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:background="@drawable/shape_radis_8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:text="工单审批"
                android:textColor="@color/textColor"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:src="@drawable/close"
                android:layout_marginRight="@dimen/dp15"
                android:padding="@dimen/dp5"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gry33"
            android:layout_marginTop="@dimen/dp15"
            />

        <RelativeLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            >

            <LinearLayout
                android:id="@+id/ll_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp40"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/shape_radis_5_grenn"
                android:paddingLeft="@dimen/dp8"
                android:paddingRight="@dimen/dp8"
                android:paddingTop="@dimen/dp5"
                android:paddingBottom="@dimen/dp5"
                >

                <ImageView
                    android:id="@+id/iv_agree"
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:src="@drawable/gou"
                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14"
                    android:paddingLeft="@dimen/dp5"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_disagree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp40"
                android:gravity="center_vertical"
                android:background="@drawable/shape_radis_5_org"
                android:paddingLeft="@dimen/dp8"
                android:paddingRight="@dimen/dp8"
                android:paddingTop="@dimen/dp5"
                android:paddingBottom="@dimen/dp5"

                >

                <ImageView
                    android:id="@+id/iv_disagree"
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp15"
                    android:src="@drawable/cha"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="驳回"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14"
                    android:paddingLeft="@dimen/dp5"


                    />
            </LinearLayout>

        </RelativeLayout>

        <EditText
            android:id="@+id/input_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:layout_below="@+id/ll_1"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginTop="@dimen/dp30"
            android:layout_marginRight="@dimen/dp40"
            android:background="@drawable/shape_radis_5_gry"
            android:gravity="center_vertical|left"
            android:hint="请填写备注"
            android:maxLines="3"
            android:paddingLeft="@dimen/dp3"
            android:paddingRight="@dimen/dp3"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp12"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gry33"
            android:layout_marginTop="@dimen/dp20"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp20"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:textSize="@dimen/sp14"
                android:text="取消"
                android:layout_marginRight="@dimen/dp15"


                />
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14"
                android:text="确定"
                android:layout_marginRight="@dimen/dp10"
                android:background="@drawable/shape_radis_5_blue"
                android:padding="@dimen/dp5"
                />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>