<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/activity_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp3"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp5"
                    android:layout_margin="@dimen/dp3"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/tv_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="工单编号"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:id="@+id/tv_statue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="状态："
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14"
                            android:gravity="right"
                            android:paddingRight="@dimen/dp5"
                            />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_eq_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备编号"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />
                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工单描述"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />
                    <TextView
                        android:id="@+id/tv_eq_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备名称"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />
                    <TextView
                        android:id="@+id/tv_fault_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="故障时间"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />
                    <TextView
                        android:id="@+id/tv_fault_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="故障类"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />
                    <TextView
                        android:id="@+id/tv_fault_vision"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="故障现象"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />
                    <TextView
                        android:id="@+id/tv_fault_reson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="故障原因"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />
                    <TextView
                        android:id="@+id/tv_deal_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="解决措施"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp15"
                            android:layout_height="@dimen/dp15"
                            android:src="@drawable/clock"
                            />
                        <TextView
                            android:id="@+id/tv_change_time"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="操作时间"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14"
                            android:layout_marginLeft="@dimen/dp3"
                            android:maxLines="1"
                            />
                        <ImageView
                            android:layout_width="@dimen/dp18"
                            android:layout_height="@dimen/dp18"
                            android:src="@drawable/name"
                            />
                        <TextView
                            android:id="@+id/tv_change_by"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="操作人"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14"
                            android:layout_marginLeft="@dimen/dp3"

                            />
                    </LinearLayout>


                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp5"
                    android:background="@color/white"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp5"
                    android:layout_margin="@dimen/dp3"
                    android:id="@+id/ll_2"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp5"
                        android:gravity="center_vertical"
                        >
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:background="@color/gry33"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="作业详细信息"
                            android:textColor="@color/grenn"
                            android:textSize="16sp"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:background="@color/gry33"

                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_standard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标准作业"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />
                    <TextView
                        android:id="@+id/tv_work_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="作业内容"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />
                    <TextView
                        android:id="@+id/tv_dute_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="负责人"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/sp14" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp15"
                            android:layout_height="@dimen/dp15"
                            android:src="@drawable/clock"
                            />
                        <TextView
                            android:id="@+id/tv_report_by"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="报告人"
                            android:textColor="@color/textColor"
                            android:layout_marginLeft="@dimen/dp3"
                            android:textSize="@dimen/sp14" />
                        <ImageView
                            android:layout_width="@dimen/dp15"
                            android:layout_height="@dimen/dp15"
                            android:src="@drawable/name"
                            />
                        <TextView
                            android:id="@+id/tv_report_time"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="报告时间"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/sp14"
                            android:layout_marginLeft="@dimen/dp3"
                            android:maxLines="1"

                            />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/magicIndicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:background="@color/white" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>